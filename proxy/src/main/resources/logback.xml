<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 控制台輸出設定 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 使用與後端 Spring Boot 類似的彩色日誌模式 -->
            <pattern>%clr(%d{HH:mm:ss.SSS}){faint} %clr(%-5level) %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} : %m%n%wEx</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--
        安裝 JUL 到 SLF4j 的橋接器
        這會攔截 java.util.logging 的調用並將其重定向到 SLF4j
    -->
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <!-- 根 Logger 設定 -->
    <root level="INFO"> <!-- 設定根日誌級別為 INFO -->
        <appender-ref ref="CONSOLE" /> <!-- 將控制台輸出附加到根 Logger -->
    </root>

    <!-- 可以為特定包設定不同的日誌級別 -->
    <!-- 
    <logger name="com.example.proxy" level="DEBUG"/> 
    -->

</configuration> 